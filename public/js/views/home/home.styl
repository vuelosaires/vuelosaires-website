#home
  width 100%
  height 100%
  .home-overlay-content
    font-size 4vw
    position absolute
    top 200px
    left 130px
    color white
    font-weight 300
    width 70%
    height auto
    padding 75px 20px
    @media screen and (max-width: $phone) {
      font-size 9vw
      top 30px
      left 10px
      text-align left
    }
  .overlay-shadow
    position absolute
    background linear-gradient(180deg, rgba(0,0,0,0), rgba(0,0,0,0.5));
    width 100vw
    height 100%
  #home-body
    position relative
    top 100vh
    background-color white
    #services-container
      text-align center
      padding-bottom 100px
      height calc(100vh - 50px)
      @media screen and (max-width: $phone) {
        height auto
      }
      h2
        margin-top 50px
        padding-bottom 30px
        font-size 3em
      .service-module
        height auto
        @media screen and (max-width: $phone) {
          margin-bottom 50px
        }
        .module-pic
          display block
          margin 0 auto 20px
          width 60%
        .service-title
          text-align center
          font-size 2em
        .service-description
          text-align center
          padding 0px 10px
          font-size 0.8em
          color gray
          min-height 50px
        .services-more-link
          font-size 0.8em
          display inline-block
          padding 5px 10px
          background-color lightgray
          text-decoration none
          transition background-color 0.2s ease-in-out
          &:hover
            background-color alpha(lightgray, 0.5)
