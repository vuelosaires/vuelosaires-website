#home
  width 100%
  height 100%
  .home-overlay // display: none until solving whole page covering issue
    background rgba(0,0,0,0.3)
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    display none
  .home-overlay-content
    font-size 4vw
    position absolute
    top 200px
    left 130px
    color white
    font-weight 300
    width 70%
    height auto
    padding 75px 20px
    @media screen and (max-width: $phone) {
      font-size 9vw
      top 30px
      left 10px
      text-align left
    }
  .overlay-shadow
    img
      width 100%
      height 100vh
      position absolute
  .go-down
    .down-arrow
      width 100px
      height 100px
      position absolute
      left calc(50% - 50px)
      z-index 0
      opacity 0
      cursor pointer
      display none
    .down-animate
      display inline-block
      animation down-arrow 1s
      animation-timing-function cubic-bezier(0,.66,.2,1.01)
      animation-delay 3s
      animation-fill-mode forwards
      @keyframes down-arrow
        0% {opacity: 0; top: 110vh}
        100% {opacity: 1; top: 80vh}
      img
        width: 100px
        height: 100px
        transform scale(0.8)
        position: absolute
        transition .1s transform ease-in-out
        &:hover
          transform scale(.85)
        &:active
          transform scale(.75)
  #home-body
    position relative
    top 100vh
    background-color white
    #services-container
      text-align center
      padding-bottom 100px
      height calc(100vh - 50px)
      @media screen and (max-width: $phone) {
        height auto
      }
      h2
        margin-top 50px
        padding-bottom 30px
        font-size 3em
      .service-module
        height auto
        @media screen and (max-width: $phone) {
          margin-bottom 50px
        }
        .module-pic
          display block
          margin 0 auto 20px
          width 60%
        .service-title
          text-align center
          font-size 2em
        .service-description
          text-align center
          padding 0px 10px
          font-size 0.8em
          color gray
          min-height 50px
        .services-more-link
          font-size 0.8em
          display inline-block
          padding 5px 10px
          background-color lightgray
          text-decoration none
          transition background-color 0.2s ease-in-out
          &:hover
            background-color alpha(lightgray, 0.5)
