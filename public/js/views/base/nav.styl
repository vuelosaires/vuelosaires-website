#main-nav
  width 100%
  height 40px
  background-color rgba(0,0,0,0.7)
  color rgb(200, 200, 200)
  font-size 12px
  padding 10px 0
  #va-logo
    display inline-block
    width 40px
    height 20px
    background-color #fafafa
    margin 0 30px 0 10px
  ul.nav-items
    display inline-block
    padding 0
    vertical-align top
    margin-top 1px
    li
      display inline-block
      margin 0 15px
      cursor pointer
      transition color 0.2s ease-in-out
      &:hover
        color white