#publicidad-service
  width 100%
  height 100%
  padding-top 0px
  .advertising-overlay-content
    font-size 4vw
    position absolute
    top 200px
    left 130px
    color white
    font-weight 300
    width 70%
    height auto
    padding 75px 20px
    @media screen and (max-width: $phone) {
      font-size 9vw
      top 30px
      left 10px
      text-align left
    }
  .overlay-shadow
    img
      width 100%
      height 100vh
      position absolute
  .go-down
    .down-arrow
      width 100px
      height 100px
      position absolute
      left calc(50% - 50px)
      z-index 0
      opacity 0
      cursor pointer
      animation down-arrow 1s
      animation-timing-function cubic-bezier(0,.66,.2,1.01)
      animation-delay 3s
      animation-fill-mode forwards
      @keyframes down-arrow
        0% {opacity: 0; top: 110vh}
        100% {opacity: 1; top: 80vh}
      img
        width: 100px
        height: 100px
        transform scale(0.8)
        position: absolute
  #advertising-body
    position relative
    background-color white
    top 100vh
    height calc(100vh + 300px)
    .section-title
      padding-top 50px
      padding-bottom 30px
      font-size 3em
      text-align center
      font-weight lighter
    .section-description
      text-align center
      padding 0px 10px
      font-size 1.2em
      color gray
      min-height 50px
  #adv-video-carousel
    margin-bottom 200px
    width 100%
    height 100%
    .adv-video-carousel-overlay // display: none until solving whole page covering issue
      background rgba(0,0,0,0.3)
      position fixed
      top 0
      left 0
      right 0
      bottom 0
      display none
    .adv-video-carousel-overlay-content
      font-size 60px
      position absolute
      top 400px
      left 30px
      line-height 0.8
      color white
      font-weight 300
      width 95%
