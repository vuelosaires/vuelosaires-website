.slick-track
  .slick-slide
    outline 0
    height auto
    max-height 500px
    img
      width 100%
      margin 0 auto
      outline 0
      max-width 1600px
.slick-prev,
.slick-next
    position absolute
    display block
    height 100%
    width 100px
    line-height 0px
    font-size 0px
    cursor pointer
    color transparent
    background transparent
    top 50%
    transform translate(0, -50%)
    padding 0
    border none
    outline none
    z-index 100

.slick-prev
  left 0
  &:before
    content '<'
    padding 1px
  
.slick-next
  right 0
  &:before
    content '>'
    padding 0px 0px 1px 2px

.slick-prev:before, .slick-next:before
  display inline-block
  background #fafafa
  border-radius 50%
  font-size 20px
  width 20px
  height 20px
  line-height 1
  color black
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  border 1px solid #aaa
  box-shadow 0 4px 10px 1px rgba(0,0,0,.7)

.slick-dots
  position absolute
  bottom -25px
  list-style none
  display block
  text-align center
  padding 0
  margin 0
  width 100%
  li
    position relative
    display inline-block
    height 20px
    width 20px
    margin 0 5px
    padding 0
    cursor pointer
    button
        border 0
        background transparent
        display block
        height 20px
        width 20px
        outline none
        line-height 0px
        font-size 0px
        color transparent
        padding 5px
        cursor pointer
        &:hover, &:focus
          outline none
          &:before
            opacity: 0.85;
        &:before
          position absolute
          top 0
          left 0
          content 'â€¢'
          width 20px
          height 20px
          font-size 15px
          line-height 20px
          text-align center
          color grey
          opacity 0.5
          -webkit-font-smoothing antialiased
          -moz-osx-font-smoothing grayscale
    &.slick-active button:before
      color black
      opacity 1