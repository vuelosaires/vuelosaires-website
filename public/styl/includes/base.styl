*
  margin 0
  padding 0
  border 0
  box-sizing border-box

html, body
  font-family 'Open Sans', Helvetica, sans-serif

a
  color inherit
  text-decoration none
  &:hover
    color inherit

h1, .first-title
  padding-top 70px

.inner-body
  opacity 1
  transition opacity 0.3s ease-in-out
  &.hide
    opacity 0
    transition none
